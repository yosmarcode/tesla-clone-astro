---
import LinkComponent from '../LinkComponent.astro'

interface Props {
    id?: string
    class?: string
    srcImgBackground?: string
    mainTitle?: string
    titleAgenda?: string
    urlTitleAngeda?: string 
    btnUnoName?: string
    btnUnoClass?: string
    btnUnoUrl?: string
    btnDosName?: string
    btnDosClass?: string
    btnDosUrl?: string
    _style?: string
}

const { id, class: className, mainTitle, titleAgenda, urlTitleAngeda,  srcImgBackground,    btnUnoName,
    btnUnoClass,
    btnUnoUrl,
    btnDosName,
    btnDosClass,
    btnDosUrl,  _style} = Astro.props as Props
---
<div
  class=`${className} w-full h-screen lg:h-[50rem] bg-conver bg-center `
  style=`background-image: url(${srcImgBackground}); z-index: 0;`
>
  <div class="h-screen text-center pt-8">
    <div>
        <h1 class="text-white text-6xl font-semibold">{mainTitle ?? ''}</h1>
        <div class="">
            <LinkComponent
            title={titleAgenda ?? ""}
            hrefUrl="/"
            class="text-white w-full p-4 hover:contrast-125 hover:font-semibold underline"
          />
        </div>
        <div class=" flex justify-center place-content-center p-2 gap-4 pt-[40rem] lg:pt-[30rem]">
            <LinkComponent
            title={btnUnoName ?? ""}
            hrefUrl={btnUnoUrl ?? '/'}
            class=`${btnUnoClass}`
          />
          <LinkComponent
            title={btnDosName ?? ""}
            hrefUrl={btnDosUrl ?? '/'}
            class=`${btnDosClass}`
          />
        </div>
    </div>

  </div>
</section>